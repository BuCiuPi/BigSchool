@model IEnumerable<BigSchoolProject.Models.Course>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>
<div class="row">
    <ul class="course">
        @foreach (var item in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @item.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @item.DateTime.ToString("dd")
                    </div>

                </div>

                <div class="details">
                    <span class="lecture">
                        @item.LectureName
                    </span>
                    <span class="category">
                        @item.Category.Name
                    </span>
                </div>
                <div class="action">
                    @Html.ActionLink("Edit", "Edit" ,"Course", new { id = item.Id }, null) | 
                    @Html.ActionLink("Delete", "Delete" ,"Course", new { id = item.Id }, null)
                </div>

            </li>
        }
    </ul>
</div>
